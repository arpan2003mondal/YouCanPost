<%- include ('./partials/header')%>

<div class="w-full min-h-screen bg-zinc-900 text-white p-10">

    <div class="nav mb-5">
        <a class="text-blue-500 mr-5" href="/users/create">Create New Account</a>
        <a class="text-blue-500 mb-15" href="/">Go To Home</a>
    </div>

    <form autocomplete="off" action="/users/login" method="post">
        <h3 class="text-3xl mb-5">Login To Account</h3>
        <input class="px-3 py-2 m-2 bg-transparent rounded-md outline-none border-2 border-zinc-800" type="email" placeholder="email" name="email">
        <input class="px-3 py-2 m-2 bg-transparent rounded-md outline-none border-2 border-zinc-800" type="password" placeholder="password" name="password">
      
        <input class="px-4 py-2 m-2 bg-blue-500 rounded-md outline-none" type="submit" value="Login">
    </form>

</div>

<%- include('./partials/footer')%>